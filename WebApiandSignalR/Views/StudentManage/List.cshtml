@{
    ViewBag.Title = "Student List";
}

<h2>Student List</h2>
<br/>
<br/>

<a class="btn btn-primary" href="@Url.Action("Create", "StudentManage")">Create</a>
<br/>
<br/>

<div id="divStudentList" class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Sn</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: students">
            <tr>
                <td data-bind="text: $index() + 1"></td>
                <td data-bind="text: firstName()"></td>
                <td data-bind="text: lastName"></td>
                <td data-bind="text: address"></td>
                <td>
                    <a data-bind="click: $root.showInNewPage">Update</a>
                    <a data-bind="click: $root.confirmToRemove">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

